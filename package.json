{
  "name": "@avil13/arg",
  "public": true,
  "version": "1.0.5",
  "description": "NodeJS package for simple use arguments in cli.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node --project tsconfig.json src/index.ts",
    "dev:watch": "nodemon",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "test": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rm -rf ./dist && tsc -p .",
    "prepublish": "npm run build",
    "pub": "npm publish --access public"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-jest": "^26.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-plugin-import": "^2.21.2",
    "jest": "^26.0.1",
    "jest-canvas-mock": "^2.2.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avil13/arg.git"
  },
  "bugs": {
    "url": "https://github.com/avil13/arg/issues"
  },
  "homepage": "https://github.com/avil13/arg#readme",
  "author": "@avil13"
}
